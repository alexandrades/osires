            #     halign: "center"
            #     size_hint_y: None
            #     height: 42
            #     pos_hint: {"center_x": 0.5}
            #     padding_y: 15

        TextFieldIconButton:
            label_text: "Choose the OSIRES file to resume an existing simulation configuration."
            hint_text: "Select a .osires file to load"
            callback: root.get_osires_file_path
            text: root.osires_file
            icon: "folder-search"

        Button:
            text: "Create new"
            pos_hint: {"right": 1}
            on_release: root.creste_new_optimization()
            size_hint_x: None
            size_hint_y: None
            width: 120
            height: 40
            background_color: app.theme_cls.primary_color
            background_normal: ''

        Label:
            text:""


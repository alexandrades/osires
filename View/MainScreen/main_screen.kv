<MainScreenView>
    MDBoxLayout:
        orientation:"vertical"
        pos_hint: {"center_x": 0.5}
        adaptative_height: True
        spacing: 15
        size_hint_x: None
        width: 800

        MDLabel:
            text: "Wellcome to OSIRES!"
            color: (0, 0, 0, 1)
            size_hint_y: None
            font_size: 36
            text_size: (self.width, None)
            halign: "left"
            padding: [0, 40]

            

            # md_bg_color: app.theme_cls.primary_color

            # MDLabel:
            #     text: "Choose the OSIRES file to resume an existing simulation configuration."

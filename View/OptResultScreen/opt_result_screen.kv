<OptResultScreenView>
    MDBoxLayout:
        orientation:"vertical"
        spacing: 20

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: self.minimum_height
            md_bg_color: app.theme_cls.primary_color

            MDIconButton:
                icon: "arrow-left"
                text: "Buscar"
                icon_color: app.theme_cls.primary_color
                pos_hint: {"center_y": .5}
                theme_text_color: "Hint"
                on_press: root.previous_screen()

            MDLabel:
                text: "[b]Step 05:[/b]Optimization results."
                font_size: 20
                text_size: (self.width, None)
                halign: "left"
                markup: True
                color: (1, 1, 1, 1)
                size_hint_x: 0.7
                size_hint_y: None
                height: 100
                pos_hint: {"center_x": 0.5}

        BoxLayout:
            orientation:"vertical"
            size_hint_x: None
            width: 800
            pos_hint: {"center_x": 0.5}
            spacing: 10

            BoxLayout:
                id: graph
                orientation: "horizontal"
                size_hint_x: 1
                size_hint_y: 1.8

            Label:
                id: simulation_status
                text: "Status: "
                color: (0,0,0,1)
                font_size: 40
        
            BoxLayout:
                orientation: "horizontal"

                Label:
                    text: str(root.best_values['Params'])
                    color: (0,0,0,1)
                    font_size: 40

                Label:
                    text: str(root.best_values['Value'])
                    color: (0,0,0,1)
                    font_size: 40


            BoxLayout:
                orientation:"horizontal"
                size_hint_y: None
                size_hint_x: 1
                height: 60
                padding: [0, 15, 0, 15]
                spacing: 15

                Label:
                    text:''

                Button:
                    text: "Previous"
                    pos_hint: {"right": 1}
                    on_release: root.previous_screen()
                    size_hint_x: None
                    size_hint_y: None
                    width: 120
                    height: 40
                    background_color: app.theme_cls.primary_color
                    background_normal: ''

                Button:
                    id: next_button
                    text: "Stop"
                    pos_hint: {"right": 1}
                    on_release: root.stop_opt()
                    size_hint_x: None
                    size_hint_y: None
                    width: 120
                    height: 40
                    background_color: app.theme_cls.primary_color
                    background_normal: ''
                    # disabled: True